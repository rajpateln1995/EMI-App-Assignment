            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="5px"
            android:layout_height="5px"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:layout_editor_absoluteX="79dp"
